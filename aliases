alias container='docker exec -it microblog_microblog_1'

alias py='container python'
alias fsh='container flask shell'
alias cmd='container bashs'

alias db-init='container flask db init'
alias db-migrate='container flask db migrate'
alias db-upgrade='container flask db upgrade'

alias ms='py -m smtpd -n -c DebuggingServer localhost:8025'

alias pb='container pybabel'
alias pb-messages='pb extract -F babel.cfg -k _l -o messages.pot .'
alias pb-init='pb init -i messages.pot -d app/translations -l '
alias pb-compile='pb compile -d app/translations'

alias fti='container flask translate init '
alias ftc='container flask translate compile'
alias ftu='container flask translate update'
